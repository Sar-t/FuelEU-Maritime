{
  "compilerOptions": {
    /* ---------- File Layout ---------- */
    "rootDir": "src",
    "outDir": "dist",

    /* ---------- Environment ---------- */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "types": ["node"],

    /* ---------- Output ---------- */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ---------- Type Checking ---------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ---------- Module Interop ---------- */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* ---------- Misc ---------- */
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
